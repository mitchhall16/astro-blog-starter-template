---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { SITE_TITLE } from '../../../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter((p) => !p.data.draft);

const counts = new Map<string, number>();
for (const p of posts) {
  for (const tag of (p.data.tags ?? [])) {
    counts.set(tag, (counts.get(tag) ?? 0) + 1);
  }
}

const tags = [...counts.entries()]
  .sort((a, b) => b[1] - a[1] || a[0].localeCompare(b[0]));
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Tags | ${SITE_TITLE}`} description="Browse posts by tag." />
  </head>
  <body>
    <Header />
    <main class="container" style="padding-top: 1.2rem;">
      <section class="hero" style="padding: 1.4rem;">
        <h1 class="hero-title" style="margin:0;">
          <span class="glitch" data-text="Tags">Tags</span>
        </h1>
        <p class="hero-sub" style="margin:.55rem 0 0 0;">
          Jump to a topic. Add tags in a post’s frontmatter: <code>tags: ["futuristic","algorand"]</code>
        </p>
        <div class="hero-actions">
          <a class="btn" href="/blog">← Back to blog</a>
        </div>
      </section>

      <section style="margin-top: 1.2rem;">
        <div class="surface card">
          <div class="tags" style="margin-top:0;">
            {tags.length ? (
              tags.map(([tag, count]) => (
                <a class="tag" href={`/blog/tag/${encodeURIComponent(tag)}`}>
                  #{tag} <span class="pill" style="margin-left:.25rem;">{count}</span>
                </a>
              ))
            ) : (
              <p class="text-muted" style="margin:0;">No tags yet — add a <code>tags</code> array to any post.</p>
            )}
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
